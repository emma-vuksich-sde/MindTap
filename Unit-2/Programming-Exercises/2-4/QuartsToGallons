public class QuartsToGallons 
{
    public static void main(String[] args) 
    {
        final int QUARTS_IN_GALLONS = 4;
        int quarts;
        int gallons;
        int quartsNeeded = 18;
        gallons = quartsNeeded / QUARTS_IN_GALLONS;
        quarts = quartsNeeded % QUARTS_IN_GALLONS;
        System.out.println("A job that needs " + quartsNeeded + " quarts requires " + gallons + " gallons plus " + quarts + " quarts.");
    }
}
